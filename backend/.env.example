# ThinkCraft Backend Configuration
# Copy this file to .env and fill in your actual values

# DeepSeek API Configuration (Required)
# Get your API key from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=sk-your-api-key-here

# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database Configuration
# Storage type: memory | mongodb
DB_TYPE=memory

# MongoDB Configuration (required when DB_TYPE=mongodb)
MONGODB_URI=mongodb://localhost:27017/thinkcraft

# Redis Configuration (optional, for caching and session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES_IN=1h
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Email Service Configuration (for email verification and password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=ThinkCraft <noreply@thinkcraft.com>

# SMS Service Configuration (for phone verification and password reset)
# Provider: mock | aliyun | tencent
SMS_PROVIDER=mock
# Aliyun SMS Configuration (when SMS_PROVIDER=aliyun)
ALIYUN_ACCESS_KEY_ID=your_access_key_id
ALIYUN_ACCESS_KEY_SECRET=your_access_key_secret
ALIYUN_SMS_SIGN_NAME=your_sign_name
# Tencent SMS Configuration (when SMS_PROVIDER=tencent)
TENCENT_SECRET_ID=your_secret_id
TENCENT_SECRET_KEY=your_secret_key
TENCENT_SMS_APP_ID=your_app_id
TENCENT_SMS_SIGN=your_sign

# Logging Configuration
LOG_LEVEL=info

# Security Configuration
# Password hash rounds
BCRYPT_ROUNDS=10
# Login failure lock threshold
MAX_LOGIN_ATTEMPTS=5
# Account lock time (minutes)
ACCOUNT_LOCK_TIME=30

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100
