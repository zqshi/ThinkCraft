        // ËØ≠Èü≥ËæìÂÖ•
        let recognition = null;
        let isRecording = false;

        function handleVoice() {
            if (!('webkitSpeechRecognition' in window) && !('SpeechRecognition' in window)) {
                alert('‚ùå ÊÇ®ÁöÑÊµèËßàÂô®‰∏çÊîØÊåÅËØ≠Èü≥ËØÜÂà´\n\nËØ∑‰ΩøÁî® Chrome„ÄÅEdge Êàñ Safari ÊµèËßàÂô®');
                return;
            }

            if (isRecording) {
                // ÂÅúÊ≠¢ÂΩïÈü≥
                recognition.stop();
                isRecording = false;
                return;
            }

            // ÂàùÂßãÂåñËØ≠Èü≥ËØÜÂà´
            const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
            recognition = new SpeechRecognition();
            recognition.lang = 'zh-CN';
            recognition.continuous = false;
            recognition.interimResults = false;

            recognition.onstart = () => {
                isRecording = true;
                const input = document.getElementById('mainInput');
                input.placeholder = 'üé§ Ê≠£Âú®ÂΩïÈü≥...ÔºàÂÜçÊ¨°ÁÇπÂáªÂÅúÊ≠¢Ôºâ';
                input.style.borderColor = '#ef4444';
            };

            recognition.onresult = (event) => {
                const transcript = event.results[0][0].transcript;
                const input = document.getElementById('mainInput');
                input.value = (input.value + ' ' + transcript).trim();
                autoResize(input);
            };

            recognition.onerror = (event) => {
                console.error('ËØ≠Èü≥ËØÜÂà´ÈîôËØØ:', event.error);
                alert(`‚ùå ËØ≠Èü≥ËØÜÂà´Â§±Ë¥•Ôºö${event.error}\n\nËØ∑Ê£ÄÊü•È∫¶ÂÖãÈ£éÊùÉÈôê`);
                resetVoiceInput();
            };

            recognition.onend = () => {
                resetVoiceInput();
            };

            recognition.start();
        }

        function resetVoiceInput() {
            isRecording = false;
            const input = document.getElementById('mainInput');
            input.placeholder = 'ÂàÜ‰∫´‰Ω†ÁöÑÂàõÊÑèÊÉ≥Ê≥ïÔºåËÆ©Êàë‰ª¨ÈÄöËøáÊ∑±Â∫¶ÂØπËØùÊù•Êé¢Á¥¢ÂÆÉÁöÑÂèØËÉΩÊÄß...';
            input.style.borderColor = '';
        }

        // ÊãçÁÖßÂäüËÉΩ
        function handleCamera() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/*';
            input.capture = 'environment';  // ‰ΩøÁî®ÂêéÁΩÆÊëÑÂÉèÂ§¥

            input.onchange = async (e) => {
                const file = e.target.files[0];
                if (file) {
                    await processImageFile(file);
                }
            };

            input.click();
        }

        // ‰∏ä‰º†ÂõæÁâáÂäüËÉΩ
        function handleImageUpload() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/*';
            input.multiple = false;

            input.onchange = async (e) => {
                const file = e.target.files[0];
                if (file) {
                    await processImageFile(file);
                }
            };

            input.click();
        }

        // Â§ÑÁêÜÂõæÁâáÊñá‰ª∂
        async function processImageFile(file) {
            if (!file.type.startsWith('image/')) {
                alert('‚ùå ËØ∑ÈÄâÊã©ÂõæÁâáÊñá‰ª∂');
                return;
            }

            // ÊòæÁ§∫Âä†ËΩΩÁä∂ÊÄÅ
            const loadingMsg = addMessage('assistant', 'üñºÔ∏è Ê≠£Âú®ÂàÜÊûêÂõæÁâá...');

            try {
                // Â∞ÜÂõæÁâáËΩ¨Êç¢‰∏∫ Base64
                const base64Image = await fileToBase64(file);

                // Ë∞ÉÁî®ÂêéÁ´ØAPIËøõË°åÂõæÁâáËØÜÂà´
                const response = await fetch(`${state.settings.apiUrl}/api/vision/analyze`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        image: base64Image,
                        prompt: 'ËØ∑ÊèèËø∞ËøôÂº†ÂõæÁâáÁöÑÂÜÖÂÆπÔºåÂ¶ÇÊûúÂõæÁâá‰∏≠ÊúâÊñáÂ≠óÔºåËØ∑ÊèêÂèñÂá∫Êù•„ÄÇ'
                    })
                });

                if (!response.ok) {
                    throw new Error(`APIÈîôËØØ: ${response.status}`);
                }

                const data = await response.json();

                if (data.code !== 0) {
                    throw new Error(data.error || 'ÂõæÁâáËØÜÂà´Â§±Ë¥•');
                }

                // Â∞ÜËØÜÂà´ÁªìÊûúÂ°´ÂÖ•ËæìÂÖ•Ê°Ü
                const input = document.getElementById('mainInput');
                const description = data.data.description;
                input.value = `[ÂõæÁâáÂÜÖÂÆπ]: ${description}`;
                autoResize(input);

                // ÁßªÈô§Âä†ËΩΩÊ∂àÊÅØ
                if (loadingMsg && loadingMsg.parentNode) {
                    loadingMsg.parentNode.removeChild(loadingMsg);
                }

            } catch (error) {
                console.error('ÂõæÁâáÂ§ÑÁêÜÂ§±Ë¥•:', error);

                // ÁßªÈô§Âä†ËΩΩÊ∂àÊÅØ
                if (loadingMsg && loadingMsg.parentNode) {
                    loadingMsg.parentNode.removeChild(loadingMsg);
                }

                // ÈôçÁ∫ßÊñπÊ°àÔºö‰ªÖÊòæÁ§∫ÂõæÁâáÈ¢ÑËßà
                const reader = new FileReader();
                reader.onload = (e) => {
                    const input = document.getElementById('mainInput');
                    input.value = `[Â∑≤‰∏ä‰º†ÂõæÁâá: ${file.name}]\n\nËØ∑ÊèèËø∞‰Ω†ÊÉ≥Êé¢ËÆ®ÁöÑÂÜÖÂÆπÔºö`;
                    autoResize(input);

                    // ÊòæÁ§∫ÂõæÁâáÈ¢ÑËßàÔºàÂèØÈÄâÔºâ
                    alert(`üì∑ ÂõæÁâáÂ∑≤Êé•Êî∂Ôºö${file.name}\n\n‚ö†Ô∏è ÂõæÁâáËØÜÂà´ÂäüËÉΩÈúÄË¶ÅÂêéÁ´ØÊîØÊåÅ\nÂΩìÂâç‰ªÖÊòæÁ§∫ÂõæÁâáÂêçÁß∞ÔºåËØ∑ÊâãÂä®ÊèèËø∞ÂõæÁâáÂÜÖÂÆπ„ÄÇ`);
                };
                reader.readAsDataURL(file);
            }
        }

        // Êñá‰ª∂ËΩ¨ Base64
        function fileToBase64(file) {
            return new Promise((resolve, reject) => {
                const reader = new FileReader();
                reader.onload = () => {
                    const base64 = reader.result.split(',')[1];
                    resolve(base64);
                };
                reader.onerror = reject;
                reader.readAsDataURL(file);
            });
        }

        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('active');
