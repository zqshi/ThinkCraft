            logEl.style.opacity = '0';
            logEl.style.transition = 'opacity 0.3s';
            logsContainer.appendChild(logEl);

            setTimeout(() => {
                logEl.style.opacity = '1';
            }, 50);

            // Ëá™Âä®ÊªöÂä®Âà∞Â∫ïÈÉ®
            logsContainer.scrollTop = logsContainer.scrollHeight;
        }

