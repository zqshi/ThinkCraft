        // Ê®°ÊãüDemoÁîüÊàêËøáÁ®ã
        let demoProgressInterval = null;
        const demoLogs = [];

        function simulateDemoGeneration(steps) {
            let currentStepIndex = 0;
            let progress = 0;
            const totalSteps = steps.length;

            const logMessages = {
                'requirements': [
                    '> ÂàÜÊûêÁî®Êà∑ÂàõÊÑèÔºö' + (state.userData.idea || 'ÂàõÊÑèÈ°πÁõÆ'),
                    '> ÊèêÂèñÊ†∏ÂøÉÂäüËÉΩÈúÄÊ±Ç...',
                    '> ÁîüÊàêÂäüËÉΩÊ®°ÂùóËßÑÂàí...',
                    '> ÈúÄÊ±ÇÂàÜÊûêÂÆåÊàê ‚úì'
                ],
                'architecture': [
                    '> ËÆæËÆ°ÊäÄÊúØÊû∂ÊûÑ...',
                    '> ÈÄâÊã©ÊäÄÊúØÊ†àÔºöReact + TailwindCSS',
                    '> ËßÑÂàíÁªÑ‰ª∂ÁªìÊûÑ...',
                    '> Êû∂ÊûÑËÆæËÆ°ÂÆåÊàê ‚úì'
                ],
                'frontend': [
                    '> ÁîüÊàêÈ°µÈù¢Â∏ÉÂ±Ä‰ª£Á†Å...',
                    '> ÂàõÂª∫ReactÁªÑ‰ª∂...',
                    '> ÂÆûÁé∞‰∫§‰∫íÈÄªËæë...',
                    '> ÂâçÁ´ØÂºÄÂèëÂÆåÊàê ‚úì'
                ],
                'integration': [
                    '> ÈõÜÊàêÂäüËÉΩÊ®°Âùó...',
                    '> ÈÖçÁΩÆË∑ØÁî±ÂíåÁä∂ÊÄÅÁÆ°ÁêÜ...',
                    '> ËøûÊé•Êï∞ÊçÆÊé•Âè£...',
                    '> ÂäüËÉΩÈõÜÊàêÂÆåÊàê ‚úì'
                ],
                'testing': [
                    '> ËøêË°åÂäüËÉΩÊµãËØï...',
                    '> ‰ºòÂåñÊÄßËÉΩ...',
                    '> ÁîüÊàêÈ°πÁõÆÊñá‰ª∂...',
                    '> ÊµãËØï‰ºòÂåñÂÆåÊàê ‚úì'
                ]
            };

            function processStep() {
                if (currentStepIndex >= totalSteps) {
                    clearInterval(demoProgressInterval);
                    setTimeout(() => {
                        closeDemoProgress();
                        showDemoPreview();
                    }, 1000);
                    return;
                }

                const step = steps[currentStepIndex];
                const stepEl = document.getElementById(`demo-step-${step.id}`);
                const iconEl = document.getElementById(`demo-step-icon-${step.id}`);
                const statusEl = document.getElementById(`demo-step-status-${step.id}`);

                // ËÆæÁΩÆ‰∏∫Ê¥ªÂä®Áä∂ÊÄÅ
                stepEl.classList.add('active');
                iconEl.classList.add('spinning');
                statusEl.textContent = 'ËøõË°å‰∏≠...';

                // Ê∑ªÂä†Êó•Âøó
                const logs = logMessages[step.id];
                let logIndex = 0;
                const logInterval = setInterval(() => {
                    if (logIndex < logs.length) {
                        addDemoLog(logs[logIndex]);
                        logIndex++;
                    } else {
                        clearInterval(logInterval);
                    }
                }, 800);

                // Ê®°ÊãüÊ≠•È™§ÂÆåÊàê
                setTimeout(() => {
                    stepEl.classList.remove('active');
                    stepEl.classList.add('completed');
                    iconEl.classList.remove('spinning');
                    statusEl.textContent = 'Â∑≤ÂÆåÊàê';

                    currentStepIndex++;
                    progress = Math.round((currentStepIndex / totalSteps) * 100);

                    document.getElementById('demoProgressFill').style.width = `${progress}%`;
                    document.getElementById('demoProgressText').textContent =
                        `Ê≠£Âú®ÁîüÊàêDemoÔºåÂ∑≤ÂÆåÊàê ${currentStepIndex}/${totalSteps} ‰∏™Ê≠•È™§Ôºà${progress}%Ôºâ`;

                }, 5000);
            }

            demoProgressInterval = setInterval(processStep, 5500);
            processStep();
        }

        // Ê∑ªÂä†Êó•Âøó
        function addDemoLog(message) {
            const logsContainer = document.getElementById('demoLogs');
