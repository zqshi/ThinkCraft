{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-debugger": "error",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": "error",
    "curly": "error",
    "default-case": "warn",
    "no-fallthrough": "error",
    "no-duplicate-case": "error",
    "no-unreachable": "error",
    "no-return-assign": "error",
    "no-implicit-coercion": "warn",
    "no-multi-spaces": "error",
    "no-trailing-spaces": "error",
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  },
  "overrides": [
    {
      "files": ["frontend/js/modules/project-manager.js"],
      "rules": {
        "no-useless-catch": "off",
        "no-unused-vars": "off",
        "no-undef": "off",
        "no-empty": "off"
      }
    },
    {
      "files": ["frontend/js/modules/business-plan-generator.js"],
      "rules": {
        "no-unused-vars": "off",
        "no-empty": "off",
        "default-case": "off"
      }
    },
    {
      "files": ["frontend/js/core/storage-manager.js"],
      "rules": {
        "no-empty": "off",
        "no-dupe-class-members": "off"
      }
    },
    {
      "files": ["frontend/js/modules/chat/chat-list.js"],
      "rules": {
        "indent": "off",
        "curly": "off",
        "no-multi-spaces": "off"
      }
    },
    {
      "files": [
        "frontend/js/modules/chat/chat-manager.js",
        "frontend/js/modules/chat/message-handler.js",
        "frontend/js/modules/report/report-viewer.js"
      ],
      "rules": {
        "indent": "off",
        "curly": "off",
        "no-multi-spaces": "off",
        "object-curly-spacing": "off",
        "quotes": "off"
      }
    },
    {
      "files": ["frontend/js/modules/chat/typing-effect.js"],
      "rules": {
        "indent": "off",
        "curly": "off",
        "eqeqeq": "off",
        "no-multi-spaces": "off",
        "object-curly-spacing": "off",
        "quotes": "off"
      }
    },
    {
      "files": ["frontend/js/modules/report/report-generator.js"],
      "rules": {
        "indent": "off",
        "curly": "off",
        "no-multi-spaces": "off",
        "object-curly-spacing": "off",
        "quotes": "off",
        "no-var": "off"
      }
    },
    {
      "files": ["frontend/js/modules/project-manager.js"],
      "rules": {
        "indent": "off",
        "curly": "off",
        "quotes": "off",
        "no-multi-spaces": "off",
        "prefer-const": "off",
        "no-var": "off"
      }
    },
    {
      "files": ["frontend/js/modules/report/report-status-manager.js"],
      "rules": {
        "indent": "off",
        "curly": "off",
        "no-multi-spaces": "off",
        "quotes": "off"
      }
    },
    {
      "files": ["backend/src/features/projects/**/*.js"],
      "rules": {
        "no-unused-vars": "off",
        "no-empty": "off"
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/",
    "backend/node_modules/",
    "dist/",
    "build/",
    "*.min.js",
    "**/*.test.js"
  ]
}
