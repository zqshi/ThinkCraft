# ThinkCraft Backend Configuration
# Copy this file to .env and fill in your actual values

# DeepSeek API Configuration (Required)
# Get your API key from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database Configuration
# Storage type: memory | mongodb
DB_TYPE=memory

# MongoDB Configuration (required when DB_TYPE=mongodb)
MONGODB_URI=mongodb://localhost:27017/thinkcraft

# Redis Configuration (optional, for caching and session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Token Configuration
ACCESS_TOKEN_SECRET=your-access-token-secret
REFRESH_TOKEN_SECRET=your-refresh-token-secret
ACCESS_TOKEN_EXPIRY=1h
REFRESH_TOKEN_EXPIRY=7d

# SMS Service Configuration (for phone verification)
# Provider: mock | aliyun | tencent
SMS_PROVIDER=mock
# Aliyun SMS Configuration (when SMS_PROVIDER=aliyun)
ALIYUN_ACCESS_KEY_ID=your_access_key_id
ALIYUN_ACCESS_KEY_SECRET=your_access_key_secret
ALIYUN_SMS_SIGN_NAME=your_sign_name
# Tencent SMS Configuration (when SMS_PROVIDER=tencent)
TENCENT_SECRET_ID=your_secret_id
TENCENT_SECRET_KEY=your_secret_key
TENCENT_SMS_APP_ID=your_app_id
TENCENT_SMS_SIGN=your_sign

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# Vision Analysis Configuration
# ========================================

# OCR Provider: tencent | baidu
VISION_OCR_PROVIDER=tencent

# Tencent Cloud OCR Configuration
TENCENT_SECRET_ID=your_secret_id
TENCENT_SECRET_KEY=your_secret_key
TENCENT_REGION=ap-guangzhou

# Image Processing Configuration
VISION_MAX_IMAGE_SIZE_MB=10
