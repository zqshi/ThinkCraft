        function loadChat(id) {
            const chat = state.chats.find(c => c.id === id);
            if (!chat) return;

            state.currentChat = id;
            state.messages = [...chat.messages];
            state.userData = chat.userData ? {...chat.userData} : {};
            state.conversationStep = chat.messages ? chat.messages.length : 0;
            state.analysisCompleted = chat.analysisCompleted || false;  // ÊÅ¢Â§çÂàÜÊûêÁä∂ÊÄÅ

            document.getElementById('emptyState').style.display = 'none';
            const messageList = document.getElementById('messageList');
            messageList.style.display = 'block';
            messageList.innerHTML = '';

            chat.messages.forEach((msg, index) => {
                const isLastMessage = index === chat.messages.length - 1;
                const shouldShowButton = isLastMessage && msg.role === 'assistant' && chat.analysisCompleted;

                // ÁßªÈô§Ê∂àÊÅØ‰∏≠ÁöÑ[ANALYSIS_COMPLETE]Ê†áËÆ∞
                let content = msg.content;
                if (content.includes('[ANALYSIS_COMPLETE]')) {
                    content = content.replace(/\n?\[ANALYSIS_COMPLETE\]\n?/g, '').trim();
                }

                if (shouldShowButton) {
                    // ÊúÄÂêé‰∏ÄÊù°AIÊ∂àÊÅØ‰∏îÂ∑≤ÂÆåÊàêÂàÜÊûêÔºåÊòæÁ§∫ÊåâÈíÆ
                    addMessage(msg.role, content, null, true, true);  // skipTyping=true
                } else {
                    addMessage(msg.role, content, null, false, true);  // skipTyping=true
                }
            });

            // Âà∑Êñ∞ÂéÜÂè≤ÂàóË°®‰ª•Êõ¥Êñ∞ÊøÄÊ¥ªÁä∂ÊÄÅ
            loadChats();
        }

