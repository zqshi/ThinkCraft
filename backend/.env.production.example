# ThinkCraft Backend Production Configuration
# Copy to .env.production and fill in actual values.

# Server
PORT=3000
NODE_ENV=production
FRONTEND_URL=https://your-domain.com

# Database (production must use mongodb)
DB_TYPE=mongodb
MONGODB_URI=mongodb://mongo-user:mongo-pass@mongo-host:27017/thinkcraft

# Redis (recommended)
REDIS_HOST=redis-host
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AI Provider
DEEPSEEK_API_KEY=your_real_api_key

# Auth Tokens
ACCESS_TOKEN_SECRET=replace-with-strong-secret
REFRESH_TOKEN_SECRET=replace-with-strong-secret
ACCESS_TOKEN_EXPIRY=1h
REFRESH_TOKEN_EXPIRY=7d

# SMS Provider (production should not use mock)
SMS_PROVIDER=aliyun
# Do NOT set this in production
SMS_DAILY_LIMIT_DISABLED=
ALIYUN_ACCESS_KEY_ID=your_access_key_id
ALIYUN_ACCESS_KEY_SECRET=your_access_key_secret
ALIYUN_SMS_SIGN_NAME=your_sign_name

# If using Tencent SMS instead, set:
# SMS_PROVIDER=tencent
# TENCENT_SECRET_ID=your_secret_id
# TENCENT_SECRET_KEY=your_secret_key
# TENCENT_SMS_APP_ID=your_app_id
# TENCENT_SMS_SIGN=your_sign

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100

# Vision OCR
VISION_OCR_PROVIDER=tencent
TENCENT_REGION=ap-guangzhou
TENCENT_SECRET_ID=your_secret_id
TENCENT_SECRET_KEY=your_secret_key

# Image Processing
VISION_MAX_IMAGE_SIZE_MB=10
