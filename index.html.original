    <script>
        const state = {
            currentChat: null,
            chats: [],
            messages: [],
            userData: {},
            conversationStep: 0,
            isTyping: false,
            isLoading: false,
            analysisCompleted: false,  // Èò≤Ê≠¢ÈáçÂ§çÊòæÁ§∫Êä•ÂëäÊåâÈíÆ
            settings: {
                darkMode: false,
                saveHistory: true,
                apiUrl: 'http://localhost:3000'
            }
        };

        // Á≥ªÁªüÊèêÁ§∫ËØç - ‰ªéÈÖçÁΩÆÊñá‰ª∂Âä†ËΩΩ
        // ‰øÆÊîπÊèêÁ§∫ËØçÔºöÁºñËæë config/system-prompts.js Êñá‰ª∂
        // ÂàáÊç¢È¢ÑËÆæÔºö‰øÆÊîπÈÖçÁΩÆÊñá‰ª∂‰∏≠ÁöÑ DEFAULT_PROMPT ÂèòÈáè
        const SYSTEM_PROMPT = window.SYSTEM_PROMPTS
            ? window.SYSTEM_PROMPTS[window.DEFAULT_PROMPT]
            : `‰Ω†ÊòØThinkCraft AIÊÄùÁª¥Âä©ÊâãÔºå‰∏ì‰∏öÁöÑÂàõÊÑèÂàÜÊûêÂíåÈ™åËØÅÂ∑•ÂÖ∑„ÄÇ

‰Ω†ÁöÑ‰ΩøÂëΩÔºö
- Â∏ÆÂä©Áî®Êà∑Á≥ªÁªüÂú∞ÂàÜÊûêÂíåÈ™åËØÅÊÉ≥Ê≥ï
- ÊèêÂá∫Âª∫ËÆæÊÄßÁöÑÈóÆÈ¢òÂíåÊ¥ûÂØü
- ÁîüÊàêÁªìÊûÑÂåñÁöÑÂàÜÊûêÊä•Âëä

‰∫§‰∫íÈ£éÊ†ºÔºö
- ÂèãÂ•Ω‰ΩÜ‰∏ì‰∏öÔºåÂæ™Â∫èÊ∏êËøõ
- Âü∫‰∫éÁî®Êà∑ÂèçÈ¶àÁÅµÊ¥ªË∞ÉÊï¥
- ÊØèÊ¨°Âè™ÈóÆ1-2‰∏™ÈóÆÈ¢òÔºåÈÅøÂÖç‰ø°ÊÅØËøáËΩΩ

ÂΩìÁî®Êà∑ÊèêÂá∫ÂàõÊÑèÊó∂Ôºå‰Ω†Â∫îËØ•ÈÄêÊ≠•ÂºïÂØº‰ªñ‰ª¨ÊÄùËÄÉÔºö
1. Ê†∏ÂøÉÊÉ≥Ê≥ïÊòØ‰ªÄ‰πàÔºü
2. ÁõÆÊ†áÁî®Êà∑ÊòØË∞ÅÔºü‰ªñ‰ª¨ÁöÑÁóõÁÇπÊòØ‰ªÄ‰πàÔºü
3. Ëß£ÂÜ≥ÊñπÊ°àÊúâ‰ªÄ‰πàÁã¨Áâπ‰πãÂ§ÑÔºü
4. Â¶Ç‰ΩïÈ™åËØÅËøô‰∏™ÊÉ≥Ê≥ïÁöÑÂèØË°åÊÄßÔºü
5. ÊúâÂì™‰∫õÂÖ≥ÈîÆÊåáÊ†áÂèØ‰ª•Ë°°ÈáèÊàêÂäüÔºü

ÂßãÁªà‰øùÊåÅÂª∫ËÆæÊÄßÊÄÅÂ∫¶ÔºåÈºìÂä±Áî®Êà∑Ê∑±Â∫¶ÊÄùËÄÉ„ÄÇ`;



        document.addEventListener('DOMContentLoaded', () => {
            loadChats();
            loadSettings();
            focusInput();

            // È¶ñÊ¨°Âä†ËΩΩÊó∂ÔºåÂ¶ÇÊûúÊúâdemoÂØπËØù‰∏îÂΩìÂâçÊ≤°ÊúâÊâìÂºÄÁöÑÂØπËØùÔºåËá™Âä®Âä†ËΩΩdemo
            setTimeout(() => {
                if (!state.currentChat && state.chats.length > 0) {
                    const demoChat = state.chats.find(c => c.id === 'demo_fitness_app');
                    if (demoChat) {
                        loadChat(demoChat.id);
                    }
                }
            }, 100);
        });

        function autoResize(textarea) {
            textarea.style.height = 'auto';
            textarea.style.height = Math.min(textarea.scrollHeight, 120) + 'px';
        }

        function handleKeyDown(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
        }

        function quickStart(type) {
            const prompts = {
                'Âàõ‰∏öÊÉ≥Ê≥ï': 'ÊàëÊúâ‰∏Ä‰∏™Âàõ‰∏öÊÉ≥Ê≥ïÔºåÊÉ≥È™åËØÅ‰∏Ä‰∏ãÂèØË°åÊÄß',
                '‰∫ßÂìÅÂäüËÉΩ': 'ÊàëÂú®ÊÄùËÄÉ‰∏Ä‰∏™‰∫ßÂìÅÂäüËÉΩÔºåÈúÄË¶ÅÂàÜÊûê‰∏Ä‰∏ã',
                'Ëß£ÂÜ≥ÊñπÊ°à': 'ÊàëÈÅáÂà∞‰∫Ü‰∏Ä‰∏™ÈóÆÈ¢òÔºåÊÉ≥ÊâæÂà∞ÊúÄ‰Ω≥Ëß£ÂÜ≥ÊñπÊ°à',
                'ËÅå‰∏öÂèëÂ±ï': 'ÊàëÂú®ËÄÉËôëËÅå‰∏öÂèëÂ±ïÊñπÂêëÔºåÈúÄË¶ÅËßÑÂàí‰∏Ä‰∏ã'
            };
            document.getElementById('mainInput').value = prompts[type];
            sendMessage();
        }

        async function sendMessage() {
            const input = document.getElementById('mainInput');
            const message = input.value.trim();

            if (!message || state.isTyping || state.isLoading) return;

            // È¶ñÊ¨°ÂØπËØùÊó∂ÈáçÁΩÆÂàÜÊûêÁä∂ÊÄÅ
            if (state.messages.length === 0) {
                state.analysisCompleted = false;
            }

            document.getElementById('emptyState').style.display = 'none';
            document.getElementById('messageList').style.display = 'block';

            // Ê∑ªÂä†Áî®Êà∑Ê∂àÊÅØ
            addMessage('user', message);
            input.value = '';
            input.style.height = 'auto';

            // Â∞ÜÊ∂àÊÅØÊ∑ªÂä†Âà∞state.messages
            state.messages.push({
                role: 'user',
                content: message
            });

            // ËÆæÁΩÆÂä†ËΩΩÁä∂ÊÄÅ
            state.isLoading = true;

            try {
                // Ë∞ÉÁî®ÂêéÁ´ØAPI
                const response = await fetch(`${state.settings.apiUrl}/api/chat`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        messages: state.messages.map(m => ({
                            role: m.role,
                            content: m.content
                        })),
                        systemPrompt: SYSTEM_PROMPT
                    })
                });

                if (!response.ok) {
                    throw new Error(`APIÈîôËØØ: ${response.status}`);
                }

                const data = await response.json();

                if (data.code !== 0) {
                    throw new Error(data.error || 'Êú™Áü•ÈîôËØØ');
                }

                const aiContent = data.data.content;

                // Â∞ÜAIÂõûÂ§çÊ∑ªÂä†Âà∞state.messages
                state.messages.push({
                    role: 'assistant',
                    content: aiContent
                });

                // ÊòæÁ§∫AIÂõûÂ§çÔºàÂ∏¶ÊâìÂ≠óÊú∫ÊïàÊûúÔºâ
                handleAPIResponse(aiContent);

                // Ëá™Âä®‰øùÂ≠òÂØπËØù
                if (state.settings.saveHistory) {
                    saveCurrentChat();
                }

            } catch (error) {
                console.error('APIË∞ÉÁî®Â§±Ë¥•:', error);
                const errorMsg = `Êä±Ê≠âÔºåÂá∫Áé∞‰∫ÜÈîôËØØÔºö${error.message}\n\nËØ∑Ê£ÄÊü•Ôºö\n1. ÂêéÁ´ØÊúçÂä°ÊòØÂê¶Â∑≤ÂêØÂä®Ôºànpm startÔºâ\n2. .envÊñá‰ª∂‰∏≠ÁöÑDEEPSEEK_API_KEYÊòØÂê¶ÈÖçÁΩÆÊ≠£Á°Æ\n3. ÁΩëÁªúËøûÊé•ÊòØÂê¶Ê≠£Â∏∏`;
                addMessage('assistant', errorMsg);
            } finally {
                state.isLoading = false;
            }
        }

        function handleAPIResponse(content) {
            const messageList = document.getElementById('messageList');
            const time = new Date().toLocaleTimeString('zh-CN', { hour: '2-digit', minute: '2-digit' });

            const messageDiv = document.createElement('div');
            messageDiv.className = 'message assistant';
            messageDiv.innerHTML = `
                <div class="message-avatar">ü§ñ</div>
                <div class="message-content">
                    <div class="message-header">
                        <span class="message-role">ThinkCraft</span>
                        <span class="message-time">${time}</span>
                    </div>
                    <div class="message-text" id="typing-${Date.now()}"></div>
                    <div class="message-actions" id="actions-${Date.now()}" style="display: none;"></div>
                </div>
            `;
            messageList.appendChild(messageDiv);

            const textElement = messageDiv.querySelector('.message-text');
            const actionElement = messageDiv.querySelector('.message-actions');

            // ‰ΩøÁî®Êñ∞ÁöÑÊâìÂ≠óÂáΩÊï∞
            typeWriterWithCompletion(textElement, actionElement, content, 30);

            scrollToBottom();
        }

        function addMessage(role, content, quickReplies = null, showButtons = false, skipTyping = false) {
            const messageList = document.getElementById('messageList');
            const time = new Date().toLocaleTimeString('zh-CN', { hour: '2-digit', minute: '2-digit' });

            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${role}`;

            const avatar = role === 'user' ? 'üë§' : 'ü§ñ';
            const roleName = role === 'user' ? '‰Ω†' : 'ThinkCraft';

            let html = `
                <div class="message-avatar">${avatar}</div>
                <div class="message-content">
                    <div class="message-header">
                        <span class="message-role">${roleName}</span>
                        <span class="message-time">${time}</span>
                    </div>
            `;

            // ÂéÜÂè≤ÂØπËØùÁõ¥Êé•ÊòæÁ§∫Ôºå‰∏ç‰ΩøÁî®ÊâìÂ≠óÊú∫ÊïàÊûú
            if (role === 'assistant' && !showButtons && !skipTyping) {
                html += `<div class="message-text" id="typing-${Date.now()}"></div>`;
                messageDiv.innerHTML = html + '</div>';
                messageList.appendChild(messageDiv);

                const textElement = messageDiv.querySelector('.message-text');
                typeWriter(textElement, content, 30);
            } else {
                html += `<div class="message-text">${content}</div>`;
            }

            if (quickReplies) {
                html += '<div class="message-actions">';
                quickReplies.forEach(reply => {
                    html += `<button class="action-chip" onclick="quickReply('${reply}')">${reply}</button>`;
                });
                html += '</div>';
            }

            if (showButtons) {
                html += `
                    <div class="report-buttons">
                        <button class="view-report-btn" onclick="viewReport()">
                            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                            </svg>
                            Êü•ÁúãÂÆåÊï¥Êä•Âëä
                        </button>
                        <button class="share-btn" onclick="showShareCard()">
                            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
                            </svg>
                            ÂàõÊÑèÂàÜ‰∫´
                        </button>
                    </div>
                `;
            }

            html += '</div>';

            if (role === 'user' || showButtons || skipTyping) {
                messageDiv.innerHTML = html;
                messageList.appendChild(messageDiv);
            }

            scrollToBottom();
            state.messages.push({ role, content, time });
        }

        function typeWriter(element, text, speed = 30) {
            state.isTyping = true;
            let i = 0;
            const timer = setInterval(() => {
                if (i < text.length) {
                    element.textContent += text.charAt(i);
                    i++;
                    scrollToBottom();
                } else {
                    clearInterval(timer);
                    state.isTyping = false;
                }
            }, speed);
        }

        function typeWriterWithCompletion(textElement, actionElement, text, speed = 30) {
            state.isTyping = true;
            let i = 0;

            // Ê£ÄÊµãÂπ∂ÁßªÈô§Ê†áËÆ∞
            let displayText = text;
            let hasAnalysisMarker = false;

            if (text.includes('[ANALYSIS_COMPLETE]')) {
                hasAnalysisMarker = true;
                displayText = text.replace(/\n?\[ANALYSIS_COMPLETE\]\n?/g, '').trim();
            }

            const timer = setInterval(() => {
                if (i < displayText.length) {
                    textElement.textContent += displayText.charAt(i);
                    i++;
                    scrollToBottom();
                } else {
                    clearInterval(timer);
                    state.isTyping = false;

                    // ÊâìÂ≠óÂÆåÊàêÂêéÔºöÈ¶ñÊ¨°Ê£ÄÊµãÂà∞Ê†áËÆ∞Êó∂ÊòæÁ§∫ÊåâÈíÆ
                    if (hasAnalysisMarker && !state.analysisCompleted) {
                        state.analysisCompleted = true;

                        actionElement.style.display = 'flex';
                        actionElement.innerHTML = `
                            <button class="view-report-btn" onclick="viewReport()">
                                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                </svg>
                                Êü•ÁúãÂÆåÊï¥Êä•Âëä
                            </button>
                            <button class="share-btn" onclick="showShareCard()">
                                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
                                </svg>
                                ÂàõÊÑèÂàÜ‰∫´
                            </button>
                        `;
                    }
                }
            }, speed);
        }

        function quickReply(text) {
            document.getElementById('mainInput').value = text;
            sendMessage();
        }

        function scrollToBottom() {
            const container = document.getElementById('chatContainer');
            container.scrollTop = container.scrollHeight;
        }

        function focusInput() {
            document.getElementById('mainInput').focus();
        }

        function startNewChat() {
            if (state.conversationStep > 0) {
                if (!confirm('Á°ÆÂÆöË¶ÅÂºÄÂßãÊñ∞ÂØπËØùÂêóÔºüÂΩìÂâçÂØπËØùÂ∞ÜË¢´‰øùÂ≠òÂà∞ÂéÜÂè≤ËÆ∞ÂΩï„ÄÇ')) {
                    return;
                }
                saveCurrentChat();
            }

            state.currentChat = null;
            state.messages = [];
            state.conversationStep = 0;
            state.userData = {};

            document.getElementById('emptyState').style.display = 'flex';
            document.getElementById('messageList').style.display = 'none';
            document.getElementById('messageList').innerHTML = '';

            focusInput();
        }

        function saveCurrentChat() {
            if (!state.settings.saveHistory || state.messages.length === 0) return;

            // ‰ªéÁ¨¨‰∏ÄÊù°Áî®Êà∑Ê∂àÊÅØÊèêÂèñÊ†áÈ¢ò
            let title = 'Êñ∞ÂØπËØù';
            const firstUserMsg = state.messages.find(m => m.role === 'user');
            if (firstUserMsg) {
                title = firstUserMsg.content.substring(0, 30);
                if (firstUserMsg.content.length > 30) {
                    title += '...';
                }
            }

            const chat = {
                id: Date.now(),
                title: title,
                messages: [...state.messages],
                createdAt: new Date().toISOString(),
                analysisCompleted: state.analysisCompleted  // ‰øùÂ≠òÂàÜÊûêÁä∂ÊÄÅ
            };
            state.chats.unshift(chat);
            localStorage.setItem('thinkcraft_chats', JSON.stringify(state.chats));
            loadChats();
        }

        function loadChats() {
            const saved = localStorage.getItem('thinkcraft_chats');
            if (saved) {
                state.chats = JSON.parse(saved);
                // ‰øÆÂ§çÊóßÊï∞ÊçÆÔºö‰∏∫Áº∫Â∞ëanalysisCompletedÂ≠óÊÆµÁöÑÂØπËØùÊ∑ªÂä†ËØ•Â≠óÊÆµ
